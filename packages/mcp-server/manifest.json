{
  "dxt_version": "0.2",
  "name": "@arcadeai/arcadejs-mcp",
  "version": "1.16.0",
  "description": "The official MCP Server for the Arcade API",
  "author": {
    "name": "Arcade",
    "email": "dev@arcade.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArcadeAI/arcade-js.git"
  },
  "homepage": "https://github.com/ArcadeAI/arcade-js/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.arcade.dev",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "ARCADE_API_KEY": "${user_config.ARCADE_API_KEY}"
      }
    }
  },
  "user_config": {
    "ARCADE_API_KEY": {
      "title": "api_key",
      "description": "API key used for authorization in header",
      "required": true,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
